{
  "id": "pokesmart",
  "name": "PokeSmart",
  "baseUrl": "https://pokesmart.pl",
  "searchUrl": "/pl/searchquery/{query}/1/full/5",
  "selectors": {
    "searchPage": {
      "article": {
        "type": "css",
        "value": "product-tile"
      },
      "productUrl": {
        "type": "css",
        "value": "product-link a",
        "extract": "href"
      },
      "title": {
        "type": "css",
        "value": "h3"
      }
    },
    "productPage": {
      "price": {
        "type": "css",
        "value": "h-tab-panel.js__product-price-gross span.price__value",
        "format": "european"
      },
      "available": {
        "type": "css",
        "value": "button#product-card-add-to-card:not(.u-hide)"
      }
    }
  }
}
