{
  "id": "xjoy",
  "name": "xjoy",
  "engine": "playwright",
  "antiBot": {
    "requestDelayMs": 2000,
    "maxConcurrency": 1
  },
  "baseUrl": "https://www.xjoy.pl",
  "searchUrl": "/search?controller=search&orderby=position&orderway=desc&search_query=",
  "selectors": {
    "searchPage": {
      "article": {
        "type": "css",
        "value": "main div.product-container"
      },
      "productUrl": {
        "type": "css",
        "value": "a.product-name",
        "extract": "href"
      },
      "title": {
        "type": "css",
        "value": "a.product-name"
      }
    },
    "productPage": {
      "price": {
        "type": "css",
        "value": "span#our_price_display",
        "format": "european"
      },
      "available": {
        "type": "css",
        "value": "div.box-cart-bottom div:not(.unvisible) button.btn-add-to-cart:not([disabled])"
      }
    }
  }
}
