# Server
PORT=3000
NODE_ENV=development

# MongoDB (SAME database as scraper)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/pokeradar

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# JWT
JWT_SECRET=your_jwt_secret_at_least_32_characters_long
JWT_EXPIRES_IN=7d

# Client Domain
# For local dev, include port. For production, just the domain (e.g., "pokeradar.pl")
# The app automatically constructs frontend URL and CORS origins from this
CLIENT_DOMAIN=localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
