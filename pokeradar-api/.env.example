# Server
PORT=3000
NODE_ENV=development

# MongoDB (SAME database as scraper - use pokeradar-dev for dev, pokeradar-prod for prod)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/pokeradar-dev

# Clerk Authentication
# Get from: https://dashboard.clerk.com â†’ API Keys
CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key

# Client Domain
# For local dev, include port. For production, just the domain (e.g., "pokeradar.pl")
# The app automatically constructs frontend URL and CORS origins from this
CLIENT_DOMAIN=localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Cloudinary
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Cloudinary folder for image uploads (pokeradar-dev for dev, pokeradar-prod for prod)
CLOUDINARY_FOLDER=pokeradar-dev
