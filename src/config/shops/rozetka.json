{
  "id": "rozetka",
  "name": "Rozetka.pl",
  "engine": "playwright",
  "baseUrl": "https://rozetka.pl",
  "searchUrl": "/search/?text=",
  "directHitPattern": "/\\d+/p\\d+/",
  "selectors": {
    "searchPage": {
      "article": {
        "type": "css",
        "value": "article.goods-tile__inner"
      },
      "productUrl": {
        "type": "css",
        "value": "a.goods-tile__heading",
        "extract": "href"
      },
      "title": {
        "type": "css",
        "value": ".goods-tile__title"
      }
    },
    "productPage": {
      "title": {
        "type": "css",
        "value": "h1"
      },
      "price": {
        "type": "css",
        "value": "p.product-price__big",
        "format": "european"
      },
      "available": {
        "type": "css",
        "value": "button.buy-button"
      }
    }
  }
}
