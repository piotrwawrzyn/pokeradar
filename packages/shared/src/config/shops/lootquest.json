{
  "id": "lootquest",
  "name": "Loot Quest",
  "baseUrl": "https://lootquest.pl",
  "searchUrl": "/?s={query}&post_type=product&dgwt_wcas=1",
  "directHitPattern": "/produkt/",
  "selectors": {
    "searchPage": {
      "article": {
        "type": "css",
        "value": "ul.products li.product"
      },
      "productUrl": {
        "type": "css",
        "value": "a",
        "extract": "href"
      },
      "title": {
        "type": "css",
        "value": "h2"
      },
      "price": {
        "type": "css",
        "value": "span.amount bdi"
      },
      "available": {
        "type": "css",
        "value": ".instock",
        "matchSelf": true
      },
      "unavailable": {
        "type": "css",
        "value": ".outofstock",
        "matchSelf": true
      }
    },
    "productPage": {
      "title": {
        "type": "css",
        "value": "h1"
      },
      "price": {
        "type": "css",
        "value": "p.price bdi",
        "format": "european"
      },
      "available": {
        "type": "css",
        "value": "button[name='add-to-cart']"
      }
    }
  }
}
