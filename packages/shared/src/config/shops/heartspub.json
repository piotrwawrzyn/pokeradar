{
  "id": "heartspub",
  "name": "Hearts Pub",
  "baseUrl": "https://hearts.pub",
  "searchUrl": "/sklep/szukaj?controller=search&s=",
  "selectors": {
    "searchPage": {
      "article": {
        "type": "css",
        "value": "div.products article"
      },
      "productUrl": {
        "type": "css",
        "value": "h2.product-title a",
        "extract": "href"
      },
      "titleFromUrl": true,
      "price": {
        "type": "css",
        "value": "span.price"
      },
      "unavailable": {
        "type": "text",
        "value": "Brak towaru"
      }
    },
    "productPage": {
      "price": {
        "type": "css",
        "value": "span.current-price-value",
        "format": "european"
      },
      "available": {
        "type": "css",
        "value": "button.add-to-cart:not([disabled])"
      }
    }
  }
}
