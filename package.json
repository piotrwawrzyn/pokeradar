{
  "name": "pokeradar",
  "version": "1.0.0",
  "private": true,
  "description": "Pokemon price monitor monorepo",
  "workspaces": [
    "packages/*",
    "pokebot-api",
    "pokebot-client",
    "pokebot-scrapper",
    "pokebot-notifications"
  ],
  "scripts": {
    "build:shared": "npm run build -w @pokebot/shared",
    "build:api": "npm run build -w pokebot-api",
    "build:client": "npm run build -w pokebot-client",
    "build:scrapper": "npm run build -w pokebot-scrapper",
    "build:notifications": "npm run build -w pokebot-notifications",
    "build": "npm run build:shared && npm run build:api & npm run build:client & npm run build:scrapper & npm run build:notifications",
    "dev:api": "npm run dev -w pokebot-api",
    "dev:client": "npm run dev -w pokebot-client",
    "dev:notifications": "npm run dev -w pokebot-notifications",
    "dev": "concurrently -n api,client,notif -c blue,green,yellow \"npm run dev:api\" \"npm run dev:client\" \"npm run dev:notifications\"",
    "test": "npm run test --workspaces --if-present"
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  }
}
