{
  "name": "pokeradar",
  "version": "1.0.0",
  "private": true,
  "description": "Pokemon price monitor monorepo",
  "workspaces": [
    "packages/*",
    "pokeradar-api",
    "pokeradar-client",
    "pokeradar-scrapper",
    "pokeradar-notifications"
  ],
  "scripts": {
    "build:shared": "npm run build -w @pokeradar/shared",
    "build:api": "npm run build -w pokeradar-api",
    "build:client": "npm run build -w pokeradar-client",
    "build:scrapper": "npm run build -w pokeradar-scrapper",
    "build:notifications": "npm run build -w pokeradar-notifications",
    "build": "npm run build:shared && npm run build:api & npm run build:client & npm run build:scrapper & npm run build:notifications",
    "dev:api": "npm run dev -w pokeradar-api",
    "dev:client": "npm run dev -w pokeradar-client",
    "dev:notifications": "npm run dev -w pokeradar-notifications",
    "dev": "concurrently -n api,client,notif -c blue,green,yellow \"npm run dev:api\" \"npm run dev:client\" \"npm run dev:notifications\"",
    "test": "npm run test --workspaces --if-present",
    "prepare": "husky"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "husky": "^9.1.7"
  }
}
