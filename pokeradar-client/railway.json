{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm install --prefer-offline && npm run build -w pokeradar-client"
  },
  "deploy": {
    "startCommand": "npm run preview -w pokeradar-client",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
